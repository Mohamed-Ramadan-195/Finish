<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_focused="false" android:state_active="false" >
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/_6sdp" />
            <stroke android:color="@color/gray" android:width="@dimen/_1sdp" />
            <padding
                android:top="@dimen/_10sdp"
                android:bottom="@dimen/_10sdp"
                android:right="@dimen/_10sdp"
                android:left="@dimen/_10sdp" />
        </shape>
    </item>

    <item android:state_focused="true" android:state_active="true" >
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/_6sdp" />
            <stroke android:color="@color/blue" android:width="@dimen/_1sdp" />
            <padding
                android:top="@dimen/_10sdp"
                android:bottom="@dimen/_10sdp"
                android:right="@dimen/_10sdp"
                android:left="@dimen/_10sdp" />
        </shape>
    </item>

</selector>